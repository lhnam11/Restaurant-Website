        body {
            overflow-x: hidden;
            scrollbar-width: thin;
            scrollbar-color: #ff8243 transparent;
        }

        .carousel-inner img {
            width: 100%;
            height: auto;
        }

        .container-fluid.bg-danger {
            padding: 0;
            height: auto;
            max-height: 80px;
            overflow: hidden;
        }

        .col-md-3 img {
            margin: 0;
            width: 100px;
            height: 90px;
        }
        
        .navbar-nav .nav-link {
            position: relative;
            margin-right: 20px;
        }

            .navbar-nav .nav-link:hover {
                color: orange !important;
                background: #f3f3f5;
                box-shadow: inset 8px 8px 12px #e2e2e2, inset -8px -8px 12px #ffffff;
                border-radius: 30px;
            }

        .col-1 {
            line-height: 80px;
        }

        .col-md-2 {
            line-height: 90px;
            text-align: right;
            padding-right: 40px;
        }

        .container-fluid.bg-light {
            padding: 0;
        }

        .navbar {
            padding-top: 15px;
            font-size: 17px;
            color: black;
        }

        .navbar-nav .nav-link {
            color: black;
        }

            .navbar-nav .nav-link:hover {
                color: orange !important;
                background: #f3f3f5;
                box-shadow: inset 8px 8px 12px #e2e2e2, inset -8px -8px 12px #ffffff;
                border-radius: 30px;
            }

        .col-1 {
            line-height: 80px;
        }

        .col-md-2 {
            line-height: 90px;
            text-align: right;
            padding-right: 40px;
        }

        .carousel-inner img {
            width: 100%;
            height: 500px;
        }

        .container-fluid {
            padding: 0;
        }
      
       
    </style>

</head>

<body>
    <div class="container-fluid bg-light">
        <div class="row" id="menu">
            <div class="col-md-2 text-left">
                <img src="~/Images/logonhahang1.jpg" alt="Logo" style="height:90px;width:120px" />
            </div>
            <div class="col-md-5">
                <nav class="navbar navbar-expand-sm bg-light navbar-dark">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Home")" style="color:black">Trang Chủ</a>
                        </li>
                        <li class="nav-item" onmouseover="showContent()" onmouseout="hideContent()">
                            <a class="nav-link" href="@Url.Action("SanPhamPartial","SanPham")" style="color:black">Menu</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","About")" style="color:black">Về Chúng Tôi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Contact")" style="color:black">Liên Hệ</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-md-5  text-md-center">
                <div class="col-md-6 " style="margin-top:23px">
                    <form class="d-flex flex-row align-items-center flex-wrap" action="/sanpham/sanphampartial">
                        <input type="search"
                               class="form-control w-auto"
                               id="search"
                               name="search"
                               placeholder="Search"
                               size="16" />
                        <button type="submit" class="btn btn-primary mx-2" style="background-color:orange;border:none"><i class="fa-solid fa-magnifying-glass" style="color:white"></i></button>
                    </form>
                </div>
                <div class="col-md-3 " style="margin-top:25px" @*style="margin-top: 10px;"*@>
                    @Html.Action("GioHangPartial", "GioHang")
                </div>
                <div class="col-md-3 " style="margin-top:25px">
                    <a href="@Url.Action("Login","TaiKhoan")" style="color: black; text-decoration: none; font-size: medium">
                        <i class="fa-solid fa-user" style="color:orange;font-size:24px">Đăng nhập</i>

                    </a>
                </div>

            </div>

        </div>
    </div>

    <div id="demo" class="carousel slide" data-ride="carousel">
