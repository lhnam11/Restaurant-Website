
@{
    ViewBag.Title = "SanPhamTheoLoai";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
@using WebSauce.Models;
@model List<SANPHAM>

<h2 style="margin:0">Danh sách món ăn</h2>
@ViewBag.SanPham
<div class="row">
    <div class="col-3">
        @Html.Action("LoaiSanPhamPartial", "LoaiSanPham")
    </div>
    <div class="col-9">
        <div class="row">
            @{
                foreach (var item in Model)
                {
                    <div class="col-4">
                        <a href="@Url.Action("XemChiTiet","SanPham",new { @msp=item.MASP })" style="text-decoration:none;color:black">
                            <img src="@Url.Content("~/Images/"+item.HINHANH)" width="70%" height="70%" alt="Image" />
                            @if (item.TENSP.Length > 30)
                            {
                                <p>
                                    <strong title="@item.TENSP">@item.TENSP.Substring(0, 30)...</strong><br />
                                    <a href="@Url.Action("XemChiTiet","SanPham",new { @msp=item.MASP })">Xem Chi Tiết</a>
                                </p>
                            }
                            else
                            {
                                <p>
                                    <strong title="@item.TENSP">@item.TENSP</strong><br />
                                    <a href="@Url.Action("XemChiTiet","SanPham",new { @msp=item.MASP })">Xem Chi Tiết</a>
                                </p>
                                <div class="clear"></div>
                            }
                        </a>
                    </div>
                }
            }
        </div>
       
    </div>

</div>
