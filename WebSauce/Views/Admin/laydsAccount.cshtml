@model IEnumerable<WebSauce.Models.Account>

@{
    ViewBag.Title = "laydsAccount";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<h2>Danh sách tài khoản</h2>
<p>
    @Html.ActionLink("Tạo Mới", "Createacc")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoDienThoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MatKhau)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Editacc", new { @userid = item.UserID }) |
                @Html.ActionLink("Xóa", "Deleteacc", new { @userid = item.UserID })
            </td>
        </tr>
    }

</table>